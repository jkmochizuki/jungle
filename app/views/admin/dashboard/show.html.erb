<div class="card border-left-primary">

  <div class="card-header">
    <h4>Admin Dashboard</h4>
  </div>
  
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>Type</th>
          <th>Total</th>
          <th>List</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Products</td>
          <td><%= @total_products %></td>
          <td>
            <%= link_to admin_products_path do %>
              <button class="btn">All Products</button>
            <% end %>
          </td>
        </tr>

        <tr>
          <td>Categories</td>
          <td><%= @total_categories %></td>
          <td>
            <%= link_to admin_categories_path do %>
              <button class="btn">All Categories</button>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div>

